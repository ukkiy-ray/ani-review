<div class="main">
  <div class="side-bar">
    <%= render "side_bar" %>
  </div>
  <div class="main-wrapper">
    <div class="main-container">
      <div class="main-title">- 検索結果一覧 -</div>
      
      <div class="post-wrap">
        <% if @posts.present? %>
          <% @posts.each do |post| %>
            <div class="post">
              <div class="title">
                <%= link_to "#{post.title}", post_path(post.id), class: "link-to-show" %>
              </div>
              <div class="genre">
                <div class="category">
                  <%= post.category.name %>
                </div>

                <ul class="tag">
                  <li class="tag-list">
                    <%post.tags.each do |tag| %>
                      #<%=tag.name%>
                    <%end%>
                  </li>
                </ul>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="nothing">記事が存在しません。</div>
        <% end %>
        <%= link_to "トップページに戻る", root_path, class: "link_to_root" %>
      </div>
    </div>
  </div>
</div>